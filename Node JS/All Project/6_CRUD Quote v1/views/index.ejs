<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple CRUD</title>
  </head>
  <body>
    <h1>May node and express be with you.</h1>
    <form action="/quotes" method="post">
      <input type="text" name="name" placeholder="name" />
      <input type="text" name="quote" placeholder="quote" />
      <button type="submit">Submit</button>
    </form>

    <h2>Quotes</h2>

    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
      <li class="quote">
        <!-- Output name from the iterated quote object -->
        <span><%= quotes[i].name %></span>:
        <!-- Output quote from the iterated quote object -->
        <span><%= quotes[i].quote %> </span>
        <span><a href="<%= quotes[i]._id %>/update">[edit]</a></span>
        <span><a href="<%= quotes[i]._id %>/delete">[delete]</a></span>
      </li>
      <% } %>
    </ul>

    <script src="/main.js"></script>
  </body>
</html>
